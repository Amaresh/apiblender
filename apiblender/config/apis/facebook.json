{
	"name": "facebook",
	"host": "graph.facebook.com",
	"port": 80,
	"authentication": {
		"type": "simple",
		"path": "/oauth/access_token",
		"parameters": { "client_id": "YOUR_CLIENT_ID",
										"client_secret": "YOUR_CLIENT_SECRET",
										"grant_type": "client_credentials"
									}
	},
	"policy": {
		"active": true,
		"requests_per_hour": 200,
		"too_many_calls_response_code": 420,
		"too_many_calls_waiting_seconds": 600 
	},
	"interactions": [
		{
			"name": "search",
			"description": "search with a keyword",
			"request": {
				"root_path": "/path",
				"method": "GET",
				"path_constant_parameters": { "limit": 100 },
				"path_variable_parameters": { "key": "q", "type": "string" }
			},
			"response": {
				"expected_status_code": 200,
				"serialization_format": "JSON"
			}
		}
	]
}
