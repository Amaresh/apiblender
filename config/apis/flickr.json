{
    "name": "flickr",
    "host": "api.flickr.com",
    "port": 80,
    "policy": {
        "active": true,
            "requests_per_hour": 1000,
        "too_many_calls_response_code": 420,
        "too_many_calls_waiting_seconds": 600 
    },
    "interactions": [
        {
            "name": "photos_search",
            "request": {
                "url_root_path": "/services/rest/",
                "method": "GET",
                "url_params": [
                    [ "method", "string", false, "flickr.photos.search" ],
                    [ "api_key", "string", false, null ],
                    [ "tags", "string", false, null ],
                    [ "per_page", "int", true, 500 ],
                    [ "page", "int", true, null ],
                    [ "format", "string", true, "json" ],
                    [ "nojsoncallback", "boolean", false, 1 ]
                ]
            },
            "response": {
                "expected_status_code": 200,
                "serialization_format": "JSON"
            }
        },
        {
            "name": "photo_comments",
            "request": {
                "url_root_path": "/services/rest/",
                "method": "GET",
                "url_params": [
                    [ "method","string",false,"flickr.photos.comments.getList" ],
                    [ "api_key", "string", false, null ],
                    [ "photo_id", "int", false, null ],
                    [ "format", "string", true, "json" ],
                    [ "nojsoncallback", "boolean", false, 1 ]
                ]
            },
            "response": {
                "expected_status_code": 200,
                "serialization_format": "JSON"
            }
        }
    ]
}
